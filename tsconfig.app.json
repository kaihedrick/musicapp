{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "resolveJsonModule": true,   // Allows importing JSON files as modules
    "esModuleInterop": true      // Enables ES module interoperability
  },
  "files": [
    "src/main.ts",
    "src/main.server.ts",
    "server.ts",
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
